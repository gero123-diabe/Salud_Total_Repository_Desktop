<Window x:Class="SaludTotal.Desktop.Views.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mensaje de rechazo" Height="200" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock x:Name="PromptTextBlock" Text="Ingrese el mensaje que se enviarÃ¡ al paciente:" Margin="0,0,0,10"/>
        <TextBox x:Name="InputTextBox" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Aceptar" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancelar" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
