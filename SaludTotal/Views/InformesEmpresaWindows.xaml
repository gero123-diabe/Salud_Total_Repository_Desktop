<Window x:Class="SaludTotal.Desktop.Views.InformesEmpresaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Informes de Gestion de la Empresa" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" Background="Transparent">

    <Window.Resources>
        <!-- Estilo para botón "Volver al menu" -->
        <Style x:Key="VolverButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="40,20"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#27ae60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2ecc71"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón "Ver mes pasado" -->
        <Style x:Key="AccionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FCE38A"/>
            <Setter Property="Foreground" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9EFAF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botones de ventana (minimizar/cerrar) -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A8D0F3"/>
                                <Setter Property="BorderBrush" Value="#4A90E2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="0.4" BlurRadius="6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2C3E50"/>
                                <Setter Property="BorderBrush" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fondo de la ventana -->
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/Resources/Img/Fondo_desktop_1.jpg" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <!-- Botón para volver al menú anterior -->
        <Button Content="Volver al menu" 
                Style="{StaticResource VolverButtonStyle}"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="20"
                Click="VolverMenu_Click"
                ToolTip="Regresar al menú de informes"/>

        <!-- Botones de ventana (minimizar y cerrar) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Panel.ZIndex="999">
            <Button Style="{StaticResource WindowButtonStyle}" Content="⎯" Click="MinimizeWindow_Click" ToolTip="Minimizar"/>
            <Button Style="{StaticResource WindowButtonStyle}" Content="✕" Click="CloseWindow_Click" ToolTip="Cerrar"/>
        </StackPanel>

        <!-- Botón para ver mes pasado -->
        <Button Content="Ver mes pasado" 
                Style="{StaticResource AccionButtonStyle}"
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Margin="20"
                Click="VerMesPasado_Click"/>

        <!-- Título de la ventana -->
        <Border VerticalAlignment="Top" 
                HorizontalAlignment="Right"
                Margin="0,20,20,0"
                Background="#FF2C3E50"
                CornerRadius="10"
                Padding="25,10">
            <TextBlock Text="Informes de gestión de la empresa" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>
        
        <!-- Panel central con estadísticas -->
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="800"
                Background="#D0FFFFFF" 
                CornerRadius="10"
                Padding="15">
            <Border Background="#FFFFF0" CornerRadius="5" Padding="40">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Título de estadísticas -->
                        <TextBlock Text="Estadísticas Globales de la Empresa" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,30"/>

                        <!-- Filtro de Fechas -->
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Desde:" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker x:Name="FechaDesde" Grid.Column="1" Margin="0,0,20,0" VerticalAlignment="Center"/>
                            
                            <TextBlock Grid.Column="2" Text="Hasta:" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker x:Name="FechaHasta" Grid.Column="3" Margin="0,0,20,0" VerticalAlignment="Center"/>
                            
                            <Button x:Name="ActualizarEstadisticas" Grid.Column="4" Content="Actualizar" 
                                    Height="35" Width="100" FontSize="14" FontWeight="SemiBold"
                                    Background="#007BFF" Foreground="White" BorderThickness="0"
                                    Click="ActualizarEstadisticas_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#0056B3"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- Separador -->
                        <Border Height="1" Background="#E0E0E0" Margin="0,0,0,30"/>

                        <!-- Estadísticas -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Estadísticas generales -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total de Doctores:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TotalDoctores" Text="0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Total de Pacientes:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TotalPacientes" Text="0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Total de Turnos:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TotalTurnos" Text="0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <!-- Estadísticas de turnos por estado -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Turnos Atendidos:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TurnosAtendidos" Text="0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Turnos Cancelados:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TurnosCancelados" Text="0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Turnos Rechazados:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TurnosRechazados" Text="0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Turnos Reprogramados:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" x:Name="TurnosReprogramados" Text="0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Turnos Aceptados:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" x:Name="TurnosAceptados" Text="0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Turnos Desaprovechados:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" x:Name="TurnosDesaprovechados" Text="0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <!-- Estadísticas calculadas -->
                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Promedio Turnos por Doctor:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="9" Grid.Column="1" x:Name="PromedioTurnosPorDoctor" Text="0.0" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="Porcentaje de Eficiencia:" FontSize="18" Margin="0,10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="10" Grid.Column="1" x:Name="PorcentajeEficiencia" Text="0.0%" FontSize="18" FontWeight="Bold" Margin="20,10,0,10" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Botón para exportar estadísticas -->
                        <Button Content="Exportar Estadísticas a PDF" 
                                Height="50" Width="280" FontSize="16" FontWeight="SemiBold"
                                Background="#6C757D" Foreground="White" BorderThickness="0"
                                Margin="0,30,0,0" Click="ExportarEstadisticas_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#5A6268"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>
    </Grid>
</Window>